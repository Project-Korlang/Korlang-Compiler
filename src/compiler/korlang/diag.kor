// Self-hosted frontend diagnostics

module compiler.diag

struct Position
  line: Int
  column: Int
  offset: Int

fun Position.new(line: Int, column: Int, offset: Int) -> Position

struct Span
  start: Position
  end: Position

fun Span.new(start: Position, end: Position) -> Span

struct Diagnostic
  message: String
  span: Span

fun Diagnostic.new(message: String, span: Span) -> Diagnostic

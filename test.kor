// Phase Reality: Simplified Math for Bootstrap
module math

let PI: Float = 3.1415926535

fun pow(base: Float, exp: Int) -> Float {
    let res = 1.0;
    let i = 0;
    while (i < exp) {
        res = res * base;
        i = i + 1;
    }
    res
}
